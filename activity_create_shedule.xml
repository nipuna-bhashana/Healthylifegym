<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginui"
    tools:context="com.example.chabha.healthylifegym.createShedule">


    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="90dp"
        android:text="Create Shedule"
        android:textSize="34dp"
        android:textColor="#ffff"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:text="User ID :"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/id"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:text="Cardio:"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="250dp"
            android:text="Pull Over :"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="290dp"
            android:text="Incline press :"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="280dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="330dp"
            android:text="Rowing      :"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="320dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="128dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:text="Shoulder press:"
        android:textSize="18dp"
        android:layout_marginLeft="50dp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/ex6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="365dp"
        android:textSize="24dp"
        android:layout_marginLeft="0dp"
        android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginTop="420dp"
            android:text="Up Right Row :"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex7"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="415dp"
            android:textSize="24dp"
            android:layout_marginLeft="0dp"
            android:textColor="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginTop="470dp"
            android:text="Leg Press:"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex8"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="465dp"
            android:textSize="24dp"
            android:layout_marginLeft="0dp"
            android:textColor="#000"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginTop="520dp"
            android:text="Curl:"
            android:textSize="18dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/ex9"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="515dp"
            android:textSize="24dp"
            android:layout_marginLeft="0dp"
            android:textColor="#000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="560dp"
            android:text="Cancel"
            android:layout_marginLeft="178dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="560dp"
            android:text="Save"
            android:layout_marginLeft="0dp"
            android:textColor="#000"/>
    </LinearLayout>


</RelativeLayout>
